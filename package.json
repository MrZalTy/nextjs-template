{
  "name": "nextjs-template",
  "version": "1.0.0",
  "description": "A template for your Next.js projects including Typescript, Eslint, Prettier, Jest, Cypress and Docker.",
  "author": "Lorenzo Carneli",
  "repository": "https://github.com/MrZalTy/nextjs-template",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "next build",
    "start": "next start",
    "start:dev": "next dev",
    "lint": "eslint \"{src,apps,libs,test}/**/*.{js,jsx,ts,tsx}\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.{js,jsx,ts,tsx}\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "start-test start:dev http://localhost:3000 'cypress run --config ./test/cypress.config.ts'",
    "test:e2e:watch": "start-test start:dev http://localhost:3000 'cypress open --config ./test/cypress.config.ts'",
    "test:e2e:cov": "start-test start:dev http://localhost:3000 'cypress run --config ./test/cypress.config.ts && nyc report --reporter=text-summary'"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.4",
    "@heroicons/react": "^2.0.13",
    "autoprefixer": "^10.4.13",
    "next": "^13.0.3",
    "postcss": "^8.4.19",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.2.3"
  },
  "devDependencies": {
    "@babel/core": "^7.20.2",
    "@babel/preset-env": "^7.20.2",
    "@cypress/code-coverage": "^3.10.0",
    "@next/eslint-plugin-next": "^13.0.2",
    "@testing-library/cypress": "^8.0.3",
    "@testing-library/react": "^13.4.0",
    "@types/cypress__code-coverage": "^3.10.0",
    "@types/jest": "^29.2.3",
    "@types/node": "^18.11.9",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.42.1",
    "babel-loader": "^9.1.0",
    "babel-plugin-istanbul": "^6.1.1",
    "cypress": "^10.11.0",
    "eslint": "^8.27.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-next": "^13.0.5",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.6",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "eslint-plugin-tailwindcss": "^3.6.2",
    "eslint-plugin-testing-library": "^5.9.1",
    "jest": "^29.3.1",
    "nyc": "^15.1.0",
    "prettier": "^2.7.1",
    "start-server-and-test": "^1.14.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4",
    "webpack": "^5.75.0"
  }
}
