{
  "name": "nextjs-template",
  "version": "1.0.0",
  "description": "A template for your Next.js projects including Typescript, Eslint, Prettier, Jest, Cypress and Docker.",
  "author": "Lorenzo Carneli",
  "repository": "https://github.com/MrZalTy/nextjs-template",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "next build",
    "start": "next start",
    "start:dev": "next dev",
    "lint": "eslint \"{src,apps,libs,test}/**/*.{js,jsx,ts,tsx}\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.{js,jsx,ts,tsx}\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "start-test start:dev http://localhost:3000 'cypress run --config ./test/cypress.config.ts'",
    "test:e2e:watch": "start-test start:dev http://localhost:3000 'cypress open --config ./test/cypress.config.ts'",
    "test:e2e:cov": "start-test start:dev http://localhost:3000 'cypress run --config ./test/cypress.config.ts && nyc report --reporter=text-summary'"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.3",
    "@heroicons/react": "^2.0.12",
    "autoprefixer": "^10.4.12",
    "next": "^12.3.1",
    "postcss": "^8.4.17",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.1.8"
  },
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@babel/preset-env": "^7.19.4",
    "@cypress/code-coverage": "^3.10.0",
    "@next/eslint-plugin-next": "^12.3.1",
    "@testing-library/cypress": "^8.0.3",
    "@testing-library/react": "^13.4.0",
    "@types/cypress__code-coverage": "^3.10.0",
    "@types/jest": "^29.1.2",
    "@types/node": "^18.8.3",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "babel-loader": "^8.2.5",
    "babel-plugin-istanbul": "^6.1.1",
    "cypress": "^10.9.0",
    "eslint": "^8.25.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-next": "^12.3.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "eslint-plugin-tailwindcss": "^3.6.2",
    "eslint-plugin-testing-library": "^5.7.2",
    "jest": "^29.2.0",
    "nyc": "^15.1.0",
    "prettier": "^2.7.1",
    "start-server-and-test": "^1.14.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4",
    "webpack": "^5.74.0"
  }
}
